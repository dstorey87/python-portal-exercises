{
  "name": "@python-portal/exercises",
  "version": "1.0.0",
  "description": "Exercise content and metadata management for Python Portal - Content-driven learning with 17 curated exercises",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run compile && npm run copy-content",
    "compile": "tsc",
    "copy-content": "node scripts/copy-content.js",
    "dev": "concurrently \"tsc --watch\" \"npm run dev:content\"",
    "dev:content": "nodemon --watch content --ext md,py --exec npm run copy-content",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "npm run lint && npm run type-check && npm run build && npm run test:content",
    "test:content": "node scripts/validate-exercises.js",
    "prepublishOnly": "npm run test",
    "serve": "node dist/server.js",
    "validate": "node scripts/validate-exercises.js"
  },
  "keywords": [
    "python",
    "exercises",
    "learning",
    "education",
    "programming",
    "tutorial",
    "content-management"
  ],
  "author": "dstorey87 <darren@pythonportal.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dstorey87/python-portal-exercises.git"
  },
  "bugs": {
    "url": "https://github.com/dstorey87/python-portal-exercises/issues"
  },
  "homepage": "https://github.com/dstorey87/python-portal-exercises#readme",
  "dependencies": {
    "@python-portal/types": "^1.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.8",
    "typescript": "^5.5.3",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.4"
  },
  "files": [
    "dist/**/*",
    "content/**/*",
    "src/**/*",
    "scripts/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}